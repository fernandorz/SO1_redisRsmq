
<h1>Add User</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form method="POST" action="/user/add">
  
  <div class="form-group">
    <label>Usuario</label>
    <input type="text" name="id" class="form-control" placeholder="User">
  </div>

  <div class="form-group">
    <label>Password</label>
    <input type="text" name="pass" class="form-control" placeholder="Password">
  </div>

  <div class="form-group">
    <label>RE-Password</label>
    <input type="text" name="repass" class="form-control" placeholder="Password">
  </div>

  <div class="form-group">
    <label>Nombre</label>
    <input type="text" name="nombre" class="form-control" placeholder="Name">
  </div>
  
  <div class="form-group">
    <label>Apellido</label>
    <input type="text" name="apellido" class="form-control" placeholder="Email Address">
  </div> 
  
  <div class="form-group">
    <label>Fecha de registro</label>
    <input type="text" name="fecha" class="form-control" placeholder="Phone Number">
  </div>
  
  <input type="submit" class="btn btn-primary" value="Save">
</form>